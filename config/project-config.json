{
  "project": {
    "name": "DgtlEnv",
    "fullName": "DgtlEnv - Digital Environment Management",
    "description": "A sophisticated macOS development environment optimization toolkit that transforms your MacBook into a high-performance development machine.",
    "version": "1.0.0",
    "repository": "simien/DgtlEnv",
    "license": "MIT",
    "author": "Simien Antonis-Parr",
    "maintainer": "Simien Antonis-Parr",
    "website": "https://www.simienap.com/",
    "documentation": "https://github.com/simien/DgtlEnv#readme"
  },
  "system": {
    "targetOS": "macOS 12.7.6 Monterey",
    "targetHardware": "MacBook Pro (Retina, 15-inch, Mid 2015)",
    "performanceTargets": {
      "memory": {
        "target": "< 80%",
        "current": "34%",
        "status": "excellent"
      },
      "cpu": {
        "target": "< 70%",
        "current": "14%",
        "status": "optimal"
      },
      "disk": {
        "target": "< 85%",
        "current": "21%",
        "status": "healthy"
      },
      "swap": {
        "target": "minimal",
        "current": "0%",
        "status": "perfect"
      }
    }
  },
  "features": {
    "systemOptimization": {
      "enabled": true,
      "description": "Cursor IDE, Docker, and system performance tuning"
    },
    "pdfManagement": {
      "enabled": true,
      "description": "Automated PDF to markdown conversion with file watching"
    },
    "metricsTracking": {
      "enabled": true,
      "description": "Visual dashboards showing before/after improvements"
    },
    "healthMonitoring": {
      "enabled": true,
      "description": "Real-time system performance and health checks"
    },
    "automatedMaintenance": {
      "enabled": true,
      "description": "Cleanup scripts and optimization tools"
    },
    "securitySanitization": {
      "enabled": true,
      "description": "Pre-release sanitizer for public releases"
    }
  },
